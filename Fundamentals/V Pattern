Print in the output the exact pattern provided below
1        1
12      21
123    321
1234  4321
1234554321

Solution:
#include <bits/stdc++.h>
using namespace std;

int main()
{
   char c;
   cin>>c;
   int i,j;
   
   for(i=1;i<=5;i++)
   {
     for(j=1;j<=i;j++)
     {
       cout<<j;
     }
     for(j=8;j>=2*i;j--)
     { 
       cout<<"  ";
     }
     for(j=i;j>=1;j--)
     {
       cout<<j;
     }
     
     cout<<endl;
   }
  
  return 0;
}
